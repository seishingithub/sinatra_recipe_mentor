<table>
<% recipes.each do |recipe| %>
  <tr>
    <td>
      <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a>
    </td>
    <td><%= recipe.ingredients.count %></td>
  </tr>
<% end %>
</table>
<form action="recipes" method="post">
  <label>Name<input type="text" name="recipe[name]"></label>
  <input type="submit" value="Add">
</form>